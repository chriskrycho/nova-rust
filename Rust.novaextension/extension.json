{
  "identifier": "com.kilb.Rust",
  "name": "Rust",
  "organization": "Drew Kilb",
  "description": "Lorem ipsum, dolor sit amet.",
  "version": "1.0",
  "categories": ["languages"],

  "main": "main.js",

  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },

  "config": [
    {
      "key": "com.kilb.rust.language-server-path",
      "title": "Language Server Path",
      "type": "path",
      "placeholder": "/usr/local/bin/rust-analyzer",
      "default": "/usr/local/bin/rust-analyzer"
    },
    {
      "key": "com.kilb.rust.rustfmt-on-save",
      "title": "Format on Save",
      "description": "If enabled, files are formatted with `rustfmt` after saving.",
      "type": "boolean",
      "default": "false"
    }
  ]
}
